<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="FretboardWindow" parent="AdwApplicationWindow">
    <property name="title">Fretboard</property>
    <property name="default-width">500</property>
    <property name="default-height">600</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkHeaderBar" id="header_bar">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
            <style>
              <class name="flat" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="vexpand">true</property>
            <property name="halign">center</property>
            <property name="valign">center</property>
            <child>
              <object class="GtkBox">
                <child>
                  <object class="GtkRevealer" id="filler">
                    <property name="transition-type">slide-left</property>
                    <property name="transition-duration">150</property>
                    <child>
                      <object class="GtkBox">
                        <!-- total width of barre spin widget and margin -->
                        <property name="width-request">46</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="FretboardChordDiagram" id="chord_diagram">
                  </object>
                </child>
                <child>
                  <object class="FretboardBarreSpin" id="barre_spin">
                    <property name="valign">start</property>
                    <property name="margin-end">10</property>
                    <property name="margin-top">17</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_About Fretboard</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
